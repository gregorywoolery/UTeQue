<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="XMLConfigTest">
  <Properties>
		<Property name="filename">./log</Property>
		<Property name="LOG_PATTERN">[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</Property>
  </Properties>

  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>
	
	<RollingFile name="ROLLFILE" filename="${filename}/eventslog-${date:MM-dd-yyyy}.log"
					filePattern="${filename}/${date:MM-dd-yyyy}/eventsLog-%d{MM-dd-yyyy HH}-%i.log">
      <PatternLayout>
        <Pattern>${LOG_PATTERN}</Pattern>
      </PatternLayout>
	  
	  <Policies>
		<TimeBasedTriggeringPolicy/>
		<SizeBasedTriggeringPolicy size="1KB"/>
	  </Policies>
	  
	  <DefaultRolloverStrategy max="3" fileIndex="max"/>
	  
	</RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="home" level="trace" additivity="false">
	  <AppenderRef ref="ROLLFILE"/>
      <AppenderRef ref="STDOUT"/>
    </Logger>

    <Root level="trace">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
  
</Configuration>